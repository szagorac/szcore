<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.xenaksys.szcore.gui.view.SetupController">
   <center>
      <TableView fx:id="participantsTable" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="hostAddressColumn" prefWidth="75.0" text="Host" />
          <TableColumn fx:id="inPortColumn" prefWidth="75.0" text="In port" />
            <TableColumn fx:id="outPortColumn" prefWidth="75.0" text="Out port" />
            <TableColumn fx:id="errPortColumn" prefWidth="75.0" text="Err port" />
            <TableColumn fx:id="pingColumn" prefWidth="75.0" text="Ping millis" />
            <TableColumn fx:id="instrumentColumn" prefWidth="75.0" text="Instrument" />
        </columns>
      </TableView>
   </center>
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Server Address: " />
                  <Label fx:id="localInetAddr" text="-.-.-" textFill="#468686">
                     <font>
                        <Font name="Courier New" size="18.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <Label text="Participants:">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </padding>
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </top>
</BorderPane>
